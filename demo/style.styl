body
  font-family 'Helvetica Neue', Helvetica, sans-serif

.wrapper
  padding 5px 20px

.intro
  border-bottom solid 1px #888
  p

.example
  margin-bottom 20px

label
  display block
  font-weight bold
  margin 3px 0 3px

code, pre
  font-family Menlo, Monaco, "Courier New", monospace
  font-size 14px
  border-radius 3px
  font-weight: normal

code
  padding 2px 4px
  color #d14
  background-color #f7f7f9
  border 1px solid #e1e1e8

pre
  display block
  margin 0 0 5px
  padding 0 5px
  line-height 20px
  white-space pre
  white-space pre-wrap
  word-break break-all
  word-wrap break-word
  background-color #eee
  code
    padding 0
    color inherit
    background-color transparent
    border 0

.highlight
  margin-bottom 15px
  padding 15px
  border-radius 5px
  pre
    margin-bottom 0


